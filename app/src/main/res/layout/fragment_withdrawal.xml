<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Back Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_back"
            app:tint="@color/colorback" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Withdrawal"
            android:textColor="@color/colorBlack1"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />
    </RelativeLayout>


    <!-- Available Earnings -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/availableEarnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Available Earnings : "
            android:textColor="@color/colorBlack1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/availablevalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="360 INR"
            android:textColor="@color/colorOrange"
            android:textSize="16sp" />
    </LinearLayout>
    <!-- Withdrawal Options -->
    <RadioGroup
        android:id="@+id/withdrawalOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/bankTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:buttonTint="#000000"
            android:text="Bank Transfer"
            android:textColor="#000000"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/payPal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#000000"
            android:text="PayPal"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Withdraw Fund Button -->
    <TextView
        android:id="@+id/withdrawFundButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFA000"
        android:paddingVertical="12dp"
        android:text="Withdraw Fund"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_edit_text"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_medium"/>

</LinearLayout>