<?xml version="1.0" encoding="utf-8"?>
        
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none" android:tag="layout/fragment_set_payment_0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:background="?selectableItemBackground"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/set_payment"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_4sdp"
                    android:text="@string/save"
                    android:textColor="@color/colorBlue" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="@string/payment_method"/>
                <RelativeLayout
                    android:id="@+id/rlSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_text">
                    <Spinner
                        android:id="@+id/spinnerPaymentMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:popupBackground="@color/colorWhite"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tvInputType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="@string/paypal_id"/>
                <EditText
                    android:id="@+id/edPaymentID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_text"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="@dimen/_12sdp"
                    android:paddingRight="@dimen/_12sdp"
                    android:maxLines="1"
                    android:textColorHint="@color/colorGray"
                    android:hint="123-3456-89765"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="@string/phone_no"/>
                <EditText
                    android:id="@+id/edPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_text"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="@dimen/_12sdp"
                    android:paddingRight="@dimen/_12sdp"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:textColorHint="@color/colorGray"
                    android:hint="+92 302 6753596"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
         