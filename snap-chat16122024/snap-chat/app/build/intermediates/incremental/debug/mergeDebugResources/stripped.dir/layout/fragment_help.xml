<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".fragments.info.HelpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?actionBarItemBackground"
                android:src="@drawable/ic_arrow_back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16ssp"
                android:text="@string/help"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="@string/contact_us"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorBlack_45"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="@string/help_text"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/roboto_regular"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/_12sdp"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/colorBlack"
            android:text="@string/support_phone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/roboto_regular"
            android:drawableLeft="@drawable/ic_mail_box"
            android:drawablePadding="@dimen/_12sdp"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/colorBlack"
            android:text="@string/support_email"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/roboto_regular"
            android:drawableLeft="@drawable/ic_web"
            android:drawablePadding="@dimen/_12sdp"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/colorBlack"
            android:text="@string/support_web"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:fontFamily="@font/roboto_regular"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="@dimen/_12sdp"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/colorBlack"
            android:text="@string/support_location"/>
    </LinearLayout>

</ScrollView>